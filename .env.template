# DataGenius PRO - Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=DataGenius PRO
APP_VERSION=2.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# LLM API KEYS
# ===========================================
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT (optional backup)
OPENAI_API_KEY=your_openai_api_key_here

# Default LLM provider (anthropic or openai)
DEFAULT_LLM_PROVIDER=anthropic

# LLM Model Settings
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# ===========================================
# DATABASE SETTINGS
# ===========================================
# PostgreSQL
DATABASE_URL=postgresql://datagenius:password@localhost:5432/datagenius_pro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=datagenius_pro
DB_USER=datagenius
DB_PASSWORD=your_db_password_here
DB_POOL_SIZE=10

# SQLite (for development)
SQLITE_DB_PATH=./data/datagenius.db

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# FILE STORAGE
# ===========================================
# Local storage paths
DATA_UPLOAD_PATH=./data/uploads
DATA_PROCESSED_PATH=./data/processed
MODELS_PATH=./models
REPORTS_PATH=./reports/exports
LOGS_PATH=./logs

# Max file upload size (MB)
MAX_UPLOAD_SIZE_MB=100

# ===========================================
# ML SETTINGS
# ===========================================
# PyCaret settings
PYCARET_SESSION_ID=42
PYCARET_N_JOBS=-1  # -1 uses all cores
PYCARET_FOLD=5
PYCARET_VERBOSE=false

# Model training
MAX_TRAINING_TIME_MINUTES=30
AUTO_SELECT_BEST_MODEL=true
ENABLE_ENSEMBLE=true
ENABLE_HYPERPARAMETER_TUNING=true

# ===========================================
# MONITORING SETTINGS
# ===========================================
# Enable continuous monitoring
ENABLE_MONITORING=true
MONITORING_SCHEDULE=weekly  # daily, weekly, monthly
DRIFT_DETECTION_THRESHOLD=0.05

# Alerts
ENABLE_ALERTS=true
ALERT_EMAIL=your_email@example.com
ALERT_SLACK_WEBHOOK=your_slack_webhook_url

# ===========================================
# MLFLOW SETTINGS (optional)
# ===========================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=datagenius-pro
ENABLE_MLFLOW_LOGGING=false

# ===========================================
# WEIGHTS & BIASES (optional)
# ===========================================
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=datagenius-pro
ENABLE_WANDB_LOGGING=false

# ===========================================
# API SETTINGS
# ===========================================
# FastAPI settings (if using API mode)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CLOUD STORAGE (optional)
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=datagenius-pro-bucket
AWS_REGION=eu-central-1

# Google Cloud Storage
GCS_BUCKET=datagenius-pro-bucket
GCS_PROJECT_ID=your_gcs_project_id
GOOGLE_APPLICATION_CREDENTIALS=./config/gcs-credentials.json

# ===========================================
# SENTRY (Error Tracking)
# ===========================================
SENTRY_DSN=your_sentry_dsn_here
ENABLE_SENTRY=false

# ===========================================
# PROMETHEUS (Metrics)
# ===========================================
PROMETHEUS_PORT=9090
ENABLE_PROMETHEUS=false

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_MENTOR=true
ENABLE_AUTO_EDA=true
ENABLE_AUTO_ML=true
ENABLE_REPORTS=true
ENABLE_REGISTRY=true
ENABLE_DEEP_LEARNING=false
ENABLE_MULTI_USER=false

# ===========================================
# LOCALE & TIMEZONE
# ===========================================
DEFAULT_LANGUAGE=pl
TIMEZONE=Europe/Warsaw

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable debug tools
ENABLE_PROFILER=false
ENABLE_SQL_ECHO=false

# Testing
TEST_MODE=false
USE_MOCK_LLM=false